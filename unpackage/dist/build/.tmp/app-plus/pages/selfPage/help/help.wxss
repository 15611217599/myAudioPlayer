.cards {
  width: 90%;
  height: 405rpx;
  background-color: #ffffff;
  margin: 40rpx auto;
  border-radius: 10rpx;
  box-shadow: -2rpx 2rpx 8rpx #996897;
  overflow: hidden;
}
.head {
  width: 100%;
  height: 80rpx;
  background-color: #8a7496;
  text-align: left;
  line-height: 80rpx;
  text-indent: 2em;
  font-size: 30rpx;
  color: #ffffff;
}
.bodyMsg {
  position: relative;
  margin: 0 auto;
  width: 80%;
  height: 80rpx;
  text-align: left;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #000000;
  border-bottom: #bdbdbd solid 2rpx;
}
.bodyMsg:hover {
    background: #ffffff !important;
}
.bodyMsg:active {
    background: #f6f6f6 !important;
}
.bodyMsg::after {
    content: '';
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 2%;
    background: url("/static/fumou-center-template/right.png") no-repeat;
    background-size: 100%;
    top: 25rpx;
}
.show {
  display: block;
}
.hide {
  display: none;
}
.aboutContent {
  font-size: 16px;
  color: #7a8a9a;
}
.aboutContent .title {
  font-size: 18px;
  color: #e60f40;
  font-weight: bold;
  padding-top: 20px;
}
.aboutContent ._h4 {
  font-weight: bold;
  padding: 10px 0;
  color: #345;
}
.aboutContent ._p {
  line-height: 1.8;
  padding: 10px 0;
}
.aboutContent ._p.noindent {
  text-indent: 0;
}
.point::before {
  width: 6px;
  height: 6px;
  border-radius: 100%;
  background: #1f254d;
  content: '';
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
}
.aboutContent ._strong {
  color: #345;
}
.aboutContent ._a {
  border-bottom: 1px dotted #aaa;
}
.aboutContent ._a:hover {
  color: #67af27;
}
.aboutContent ._img {
  display: block;
}

